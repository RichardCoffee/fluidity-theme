# WARNING: edit path, prefix, and locale before using this file

set MY_PATH=$HOME/work/php/fluidity
set MY_PREFIX=tcc-fluid
set MY_LOCALE=$LANGUAGE

if [ -f updatepot ]; then
   pushd languages &&
   php ../classes/my-makepot.php wp-theme $MY_PATH $MY_PREFIX.pot &&
   rm $MY_PREFIX-$MY_LOCALE.po &&
   msginit --no-translator --locale=$MY_LOCALE --output-file=$MY_PREFIX-$MY_LOCALE.po &&
   msgfmt $MY_PREFIX-$MY_LOCALE.po -o $MY_PREFIX-$MY_LOCALE.mo &&
   popd &> /dev/null &&
   rm updatepot
   git add languages
fi

